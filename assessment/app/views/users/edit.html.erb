<div class="container">
  <%= form_for @user, html: { multipart: true } do |f| %>
    
    <% if @user.errors.any? %>
    <div class="error_explanation">
      We can't save your profile because:<br>
      <% @user.errors.full_messages.each do |msg| %>
        <%= msg %><br>
      <% end %>
    </div>
  <% end %>
    
  <h2><center>Tell Us More About Yourself!</center></h2>
    <hr>
    <div class="col-md-4">
      <h3>Upload A Profile Image:</h3>
        <%= f.file_field :image %><br>

        <p class="label"><%= link_to "Edit Your Registration Info Here.", edit_user_registration_path %></p><br>

        <p class="label"><%= link_to "Cancel Your Account Here.", cancel_user_registration_path %></p><br><br>
        <%= link_to "No thanks.", user_path(@user) %>
    </div>

    <div clas="col-md-8">
      <%= f.text_area :bio, size: "60x20", :value => @bio, :placeholder => "Enter Your Bio Here." %>
      <%= f.submit "Update Your Profile" %>
    </div>

  <% end %>

  

  <br><br>

  
</div>