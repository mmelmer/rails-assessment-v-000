<!DOCTYPE html>
<html>
<head>
  <title>Assessment</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <% if notice %>
    <p class="alert-info"><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end%>

</head>
<body>


 <header class="navbar  navbar-inverse">
    <div class="navbar-collapse">
      <div class="container">

        <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <p>Logged in as <%= current_user.email %></o><br>
              <p><%= link_to "Edit Your Profile", edit_user_path(current_user) %></p>
            <% end %>
          <li><%= link_to "Home", root_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <li> <%= link_to "Post a New Review", new_album_path %> </li>
          <% else %>
            <li><%=link_to "Sign In", new_user_session_path %></li>
            <li><%=link_to "Sign In With Spotify", '/auth/spotify' %></li>
            <li><%=link_to "Sign Up", new_user_registration_path %></li>
          <% end %>
        </ul>


      </div>
    </div>
  </header>



<%= yield %>

</body>
</html>
